# Working directory (should not be in repository)
/opt/vless/

# Environment files
.env
*.env.local
*.env.production

# Backup files
*.bak
*.backup
*.tar.gz

# Temporary files
*.tmp
*.temp
*~
.*.swp
.*.swo
tmp

# OS files
.DS_Store
Thumbs.db

# IDE files
.idea/
.vscode/
*.iml

# Log files
*.log
logs/

# User data
users.json
*.key
*.pem
qr_codes/

# Proxy credentials (init_claude script)
.claude_proxy_credentials
scripts/.claude_proxy_credentials

# Isolated NVM environment - temporary/cache files only
.nvm-isolated/.cache/
.nvm-isolated/.npm/
.nvm-isolated/.nvm/.cache/
.nvm-isolated/versions/node/*/include/
.nvm-isolated/versions/node/*/.npm/
.nvm-isolated/npm-global/.npm/
*.log

# Isolated Claude Code configuration (session data)
# Ignore session data, but keep skills, templates and CLAUDE.md for global availability
.nvm-isolated/.claude-isolated/*
!.nvm-isolated/.claude-isolated/skills/
!.nvm-isolated/.claude-isolated/skills/**
!.nvm-isolated/.claude-isolated/CLAUDE.md
!.nvm-isolated/.claude-isolated/task-lite-template-v4.0.md
!.nvm-isolated/.claude-isolated/task-lite-template-v5.0.md
!.nvm-isolated/.claude-isolated/task-lite-template-v6.0.md
!.nvm-isolated/.claude-isolated/task-lite-template-v7.0.md
!.nvm-isolated/.claude-isolated/CHANGELOG-v7.0.md

# Router configuration (allow both router files in git)
!.nvm-isolated/.claude-isolated/router.json.example
!.nvm-isolated/.claude-isolated/router.json

# Prevent accidental commit of runtime router config
.claude-code-router/

# NPM packages (tracked via lockfile only)
# Exclude node_modules to prevent committing minified JavaScript artifacts
.nvm-isolated/npm-global/lib/node_modules/
.nvm-isolated/versions/node/*/lib/node_modules/

# EXCEPTION: Allow @anthropic-ai packages (required for isolated environment)
!.nvm-isolated/npm-global/lib/node_modules/@anthropic-ai/
!.nvm-isolated/npm-global/lib/node_modules/@anthropic-ai/**

# Keep only package structure
!.nvm-isolated/npm-global/lib/.gitkeep

